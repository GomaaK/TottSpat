<div class="container-fluid">
	<h1>Add chat room</h1>

	<%= form_for @chat_room do |f| %>
  	<div class="form-group">
    	<%= f.label :title %>
    	<br>
    	<%= f.text_field :title, autofocus: true, class: 'form-control' %>
  	</div>
  	<br>
  	<%= f.submit "Add!", class: 'btn btn-primary' %>
	<% end %>
	<br>
<%= link_to 'Back', chat_rooms_path %>
</div>

